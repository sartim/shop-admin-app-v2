<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShopAdmin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShopAdmin.Views"
    Shell.FlyoutBehavior="Flyout"
    BackgroundColor="White">

    <FlyoutItem Title="Dashboard" FlyoutIcon="dashboard.png">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="DashboardPage" />
    </FlyoutItem>

    <FlyoutItem Title="Status" FlyoutIcon="settings.png">
        <ShellContent
            Title="Status"
            ContentTemplate="{DataTemplate local:StatusPage}"
            Route="StatusPage" />
    </FlyoutItem>

    <FlyoutItem Title="Logout" FlyoutIcon="logout.png">
        <ShellContent
            Title="Logout"
            ContentTemplate="{DataTemplate local:LogoutPage}"
            Route="LogoutPage" />
    </FlyoutItem>


</Shell>
